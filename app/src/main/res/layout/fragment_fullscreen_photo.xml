<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@android:color/black"
        tools:context=".ui.main.cheese.cheeseManage.fragments.FullscreenPhotoFragment">

        <com.malec.cheesetime.ui.main.cheese.cheeseManage.fragments.HackyViewPager
            android:id="@+id/photoViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/imageManageLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorShadow"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:backgroundTint="@color/colorWhite"
                android:padding="16dp"
                android:src="@drawable/icon_delete_outline"
                app:tint="@color/colorWhite" />

            <ImageView
                android:id="@+id/downloadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:backgroundTint="@color/colorWhite"
                android:padding="16dp"
                android:src="@drawable/icon_download"
                app:tint="@color/colorWhite" />

            <ImageView
                android:id="@+id/shareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:backgroundTint="@color/colorWhite"
                android:padding="16dp"
                android:src="@drawable/icon_share"
                app:tint="@color/colorWhite" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
